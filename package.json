{
  "name": "postcss-retina-px-border",
  "version": "0.0.1-beta",
  "description": "PostCSS plugin which create real physical pixel border on retina screen.",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "1px",
    "border",
    "retina"
  ],
  "scripts": {
    "test": "npx jest-ci --coverage && eslint-ci ."
  },
  "author": "pomelott <pomelott@163.com>",
  "license": "MIT",
  "repository": "pomelott/postcss-retina-px-border",
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "clean-publish": "^1.1.8",
    "eslint": "^7.6.0",
    "eslint-ci": "^1.0.0",
    "eslint-plugin-jest": "^23.20.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-ci": "^0.1.1",
    "jest-cli": "^26.2.2",
    "lint-staged": "^10.2.11",
    "postcss": "^8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
